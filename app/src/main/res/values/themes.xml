<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Photy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- 타이틀 바 제거 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- 각 컴포넌트 기본 폰트 설정 -->
    <style name="godoTextView" parent="android:Widget.TextView">
        <item name = "android:fontFamily">@font/godom</item>
    </style>

    <style name="godoButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/godob</item>
    </style>

    <!-- 툴바 폰트 지정 -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/godom</item>
    </style>

    <!-- 업로드 툴바 폰트 및 색상 지정 -->
    <style name="UploadToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/godom</item>
        <item name="color">@color/ourBlue</item>
    </style>

    <!-- Splash Screen theme.-->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

</resources>
