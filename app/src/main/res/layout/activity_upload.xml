<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <!-- 툴바 사용
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/upload_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/UploadToolbarTheme">

    </androidx.appcompat.widget.Toolbar>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ourYellow"
        >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="290dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:fontFamily="@font/godob"
            android:text="Upload"
            android:textColor="@color/ourBlue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="포터님이 놓치고 싶지 않은 이 순간이"
        android:gravity="center"
        android:fontFamily="@font/godom"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곧, 전세계의 포터들과 공유됩니다."
        android:gravity="center"
        android:fontFamily="@font/godom"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />


    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>
